@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MiParcialitoC</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('/images/GoldenState.jpg');
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-box {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 320px;
            text-align: center;
        }

        .login-logo img {
            width: 150px;
            margin-bottom: 20px;
        }

        .login-title {
            font-size: 24px;
            margin-bottom: 20px;
            color: #0066cc;
        }

        .form-group {
            text-align: left;
        }

        .btn-login {
            background-color: #ff6600;
            color: white;
            width: 100%;
            border: none;
            margin-top: 20px;
        }

            .btn-login:hover {
                background-color: #e65c00;
            }

        .form-check-label, .password-reset {
            font-size: 14px;
            color: #555;
        }

        .password-reset {
            float: right;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <div class="login-logo">
                <img src="/images/openenglish-logo.png" alt="open english logo" />
            </div>
            <div class="login-title">Welcome Student</div>
            <form method="post" action="@Url.Action("Login", "Home")">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" required />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" required />
                </div>
                <button type="submit" class="btn btn-login">Log In</button>
                <div class="form-group form-check mt-3">
                    <input type="checkbox" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                    <a href="#" class="password-reset">Password Reset</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>